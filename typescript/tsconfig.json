{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "jest"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "./"
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }